<div class="container chat">
  <h1>Your exchange for <%= @exchange.meal_requested.name %></h1>

  <div id="messages" class="messages">
    <% @exchange.messages.each do |message| %>
      <div id="message-<%= message.id %>">
        <small>
          <strong><%= message.user.nickname %></strong>
          <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= message.content %></p>
      </div>
    <% end %>
  </div>
</div>

<%= simple_form_for [@exchange, @message],
  html: {class: "d-flex"} do |f|
%>
  <% other_user = current_user == @exchange.meal_offered.user ? current_user : @exchange.meal_requested.user %>
  <%= f.input :content,
    label: false,
    placeholder: "Message #{other_user.email}",
    wrapper_html: {class: "flex-grow-1"}
  %>
  <%= f.submit "Send", class: "btn btn-primary mb-3" %>
<% end %>
