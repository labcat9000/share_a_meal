<div class="container px-3 pt-4">
  <h1 class="text-center fw-bold mb-4" style="font-size: 2.25rem; color: #223618;">
    Dashboard
  </h1>

  <h3 class="text-dashboard fw-bold mb-3">My Shares</h3>
  <div class="row g-3 mb-4">
    <div class="col-6">
      <div class="dashboard-box text-center p-3 h-100">
        <%= link_to user_exchanges_path(section: "current"), class: "text-decoration-none text-white fw-semibold d-block mb-2" do %>
          Current Shares
        <% end %>
        <div class="fs-3 fw-bold text-success"><%= @current_exchanges.length %></div>
      </div>
    </div>

    <div class="col-6">
      <div class="dashboard-box text-center p-3 h-100">
        <%= link_to user_exchanges_path(section: "past"), class: "text-decoration-none text-white fw-semibold d-block mb-2" do %>
          Past Shares
        <% end %>
        <div class="fs-3 fw-bold text-success"><%= @past_exchanges.length %></div>
      </div>
    </div>
  </div>

  <h3 class="text-dashboard fw-bold mb-3">My Meals</h3>
  <div class="row g-3">
    <div class="col-6">
      <div class="dashboard-box text-center p-3 h-100">
        <%= link_to user_meals_path(section: "exchanges"), class: "text-decoration-none text-white fw-semibold d-block mb-2" do %>
          Share Requests
        <% end %>
        <div class="fs-3 fw-bold text-success"><%= @exchange_requests.length %></div>
      </div>
    </div>

    <div class="col-6">
      <div class="dashboard-box text-center p-3 h-100">
        <%= link_to user_meals_path(section: "meals"), class: "text-decoration-none text-white fw-semibold d-block mb-2" do %>
          My Meals
        <% end %>
        <div class="fs-3 fw-bold text-success"><%= @my_meals.length %></div>
      </div>
    </div>
  </div>
  <div class="text-dashboard fw-bold my-4 row g-3">
  <% @latest_messages.each do |exchange, message| %>
    <% next unless exchange.status == "Accepted" %>
    <div class="col-3">
      <div class="dashboard-box p-3">
        <%= link_to exchange_messages_path(exchange), class: "text-decoration-none text-white" do %>
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <div class="fw-semibold mb-1">Chat about: <%= exchange.meal_offered.name %></div>
              <div class="text-muted small">
                <strong><%= message.user == current_user ? "You" : message.user.name %>:</strong>
                <%= truncate(message.content, length: 50) %>
              </div>
            </div>
            <i class="bi bi-chevron-right text-muted"></i>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

</div>
