<!DOCTYPE html>
<html>
  <head>
    <title>ShareAMeal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css" %>

    <%= javascript_importmap_tags %>
    <%= javascript_include_tag "https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js" %>
    <%= javascript_include_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" %>

    <meta name="mapbox-token" content="<%= ENV['MAPBOX_API_KEY'] %>">
  </head>

  <body class="pb-5">
    <!-- DEBUG: controller_name=<%= controller_name %> | action_name=<%= action_name %> -->
    <% if (controller_name == "meals" && action_name == "index") || (controller_name == "pages" && action_name == "home") %>
      <%= render "shared/navbar" %>
    <% end %>

    <%= render "shared/flashes" %>
    <%= yield %>

    <footer class="fixed-bottom bg-white border-top shadow d-flex justify-content-around align-items-center"
            style="height: 65px; z-index: 1030;">
      <%= link_to root_path, class: "text-dark text-decoration-none text-center" do %>
        <div>
          <i class="fa fa-home fa-lg d-block"></i>
        </div>
      <% end %>

      <%= link_to new_meal_path, class: "text-dark text-decoration-none text-center" do %>
        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center"
             style="width: 46px; height: 46px;">
          <i class="fa fa-plus fa-lg"></i>
        </div>
      <% end %>

      <%= link_to meal_exchanges_path(@meal), class: "text-dark text-decoration-none text-center" do %>
        <div class="d-flex align-items-center justify-content-center"
            style="width: 46px; height: 46px;">
          <i class="fa-solid fa-handshake-angle"></i>
        </div>
      <% end %>
    </footer>
  </body>
</html>
