<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
  <div class="bg-white shadow rounded-4 p-5" style="max-width: 400px; width: 100%;">
    <div class="d-flex align-items-center justify-content-center mb-4">
      <%= link_to root_path, class: "d-flex align-items-center text-decoration-none" do %>
        <%= image_tag "share_a_meal.png", height: 100, class: "me-2" %>
        <span class="fw-bold text-dark" style="font-size: 2rem;">Share A Meal</span>
      <% end %>
    </div>
    <h2 class="text-center fw-bold mb-4">Create an Account</h2>
    <p class="text-center text-muted mb-4">Join us and share your meals</p>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="d-flex flex-column gap-3">

        <%= f.input :email,
          label: false,
          placeholder: "Email address",
          input_html: {
            class: "form-control rounded-pill px-3 py-2 bg-light border-0",
            autocomplete: "email",
            autofocus: true
          } %>

        <%= f.input :password,
          label: false,
          placeholder: "Password",
          hint: (@minimum_password_length ? "#{@minimum_password_length} characters minimum" : nil),
          input_html: {
            class: "form-control rounded-pill px-3 py-2 bg-light border-0",
            autocomplete: "new-password"
          } %>

        <%= f.input :password_confirmation,
          label: false,
          placeholder: "Confirm password",
          input_html: {
            class: "form-control rounded-pill px-3 py-2 bg-light border-0",
            autocomplete: "new-password"
          } %>

        <%= f.button :submit, "Sign Up", class: "btn btn-success rounded-pill py-2 fw-semibold" %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
