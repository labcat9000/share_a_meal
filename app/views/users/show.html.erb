<div class="min-h-screen bg-gray-100 p-4 text-center">
  <h2 class="text-lg text-gray-500 mb-4">View my own profile</h2>

  <div class="bg-[#FFFDEB] rounded-t-3xl shadow-md p-4 max-w-xs mx-auto relative">
    <!-- Top icons -->
    <div class="flex justify-between items-center mb-3">
      <i class="fas fa-bars text-xl text-[#1A3D1F]"></i>
      <i class="fas fa-user text-xl text-[#1A3D1F]"></i>
    </div>

    <!-- Avatar placeholder -->
    <div class="w-24 h-24 mx-auto bg-gray-300 rounded-full mb-3"></div>

    <!-- Name and rating -->
    <div class="flex justify-between items-center mb-4 px-2">
      <h1 class="text-xl font-bold text-[#1A3D1F]"><%= "#{@user.first_name} #{@user.last_name.first}." %></h1>
    </div>

    <!-- Info box -->
    <div class="bg-white rounded-xl shadow-sm p-4 text-left">
      <div class="mb-3">
        <p class="text-sm font-bold">Firstname Lastname</p>
        <p class="text-xs text-gray-600">Member since <%= @user.created_at.strftime("%B %Y") %></p>
      </div>
      <div class="mb-3">
        <p class="text-sm font-bold">Email address</p>
        <p class="text-sm text-gray-700"><%= @user.email %></p>
      </div>
      <div class="mb-3">
        <p class="text-sm font-bold">Phone number</p>
        <p class="text-sm text-gray-700"><%= @user.phone_number || "(XXX) XXX-XXXX" %></p>
      </div>
      <div class="mb-3">
        <p class="text-sm font-bold">Pickup address</p>
        <p class="text-sm text-gray-700 whitespace-pre-line"><%= @user.address %></p>
      </div>

      <div class="absolute top-4 right-6 text-gray-600">
        <%= link_to edit_user_registration_path do %>
          <i class="fas fa-pen"></i>
        <% end %>
      </div>
    </div>
  </div>
