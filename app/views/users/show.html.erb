<div class="user-profile-page min-vh-100 d-flex flex-column justify-content-between" style="padding-bottom: 70px;">
  <div class="user-profile-content w-100 px-4 pt-3 pb-5">

    <!-- Profile Image -->
    <div class="d-flex justify-content-center mb-4">
      <div class="rounded-circle overflow-hidden shadow" style="width: 140px; height: 140px;">
        <% if @user.profile_photo.attached? %>
          <%= cl_image_tag @user.profile_photo.key, class: "w-100 h-100 object-fit-cover" %>
        <% else %>
          <%= image_tag "pfp-default.png", class: "w-100 h-100 object-fit-cover" %>
        <% end %>
      </div>
    </div>

    <!-- Name -->
    <h4 class="text-center text-capitalize fw-bold mb-5" style="font-size: 1.5rem;">
      <%= [@user.first_name, @user.last_name&.first&.upcase].compact.join(" ") + "." %>
    </h4>

    <!-- Info Card -->
    <div class="user-info-card rounded-4 p-4 shadow-sm position-relative text-muted-all">
      <%= link_to edit_user_registration_path, class: "position-absolute top-0 end-0 mt-3 me-3" do %>
        <i class="fa fa-pen fs-5" style="color: #D7E0D2;"></i>
      <% end %>
      <div class="mb-4">
        <p class="fw-semibold fs-5 text-capitalize mb-1">
          <%= "#{@user.first_name} #{@user.last_name}" %>
        </p>
        <p class="mb-0" style="font-size: 1rem;">
          Member since <%= @user.created_at.strftime("%B %Y") %>
        </p>
      </div>

      <div class="mb-4">
        <p class="fw-bold fs-6 mb-1">Email address</p>
        <p class="mb-0 fs-6"><%= @user.email %></p>
      </div>

      <div class="mb-4">
        <p class="fw-bold fs-6 mb-1">Phone number</p>
        <p class="mb-0 fs-6"><%= @user.phone_number.presence || "(XXX) XXX-XXXX" %></p>
      </div>

      <div class="mb-4">
        <p class="fw-bold fs-6 mb-1">Pickup address</p>
        <p class="mb-0 fs-6"><%= @user.address.presence || "No address set" %></p>
      </div>
    </div>
  </div>
</div>
