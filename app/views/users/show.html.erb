<div class="bg-white min-vh-100 d-flex flex-column justify-content-between" style="padding-bottom: 70px;">
  <div class="w-100 bg-white px-4 pt-3 pb-5">

    <!-- Top Nav Icons -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <%= image_tag "share_a_meal.png", height: 55, class: "me-2" %>
      <i class="fa fa-user text-muted fs-5"></i>
    </div>

    <!-- Profile Image -->
    <div class="d-flex justify-content-center mb-4">
      <div class="rounded-circle overflow-hidden shadow" style="width: 140px; height: 140px;">
        <% if @user.profile_photo.attached? %>
          <%= image_tag @user.profile_photo, class: "w-100 h-100 object-fit-cover" %>
        <% else %>
          <%= image_tag "pfp-default.png", class: "w-100 h-100 object-fit-cover" %>
        <% end %>
      </div>
    </div>

    <!-- Name -->
    <h4 class="text-center text-capitalize fw-bold mb-5" style="font-size: 1.5rem;">
      <%#= "#{@user.first_name} #{@user.last_name.first}." %>
    </h4>

    <!-- Info Card -->
    <div class="bg-white border rounded-4 p-4 shadow-sm position-relative" style="min-height: 450px;">
      <%= link_to edit_user_registration_path, class: "position-absolute top-0 end-0 mt-3 me-3 text-muted" do %>
        <i class="fa fa-pen fs-5"></i>
      <% end %>

      <div class="mb-4">
        <p class="fw-semibold fs-5 text-capitalize mb-1"><%= "#{@user.first_name} #{@user.last_name}" %></p>
        <p class="text-muted mb-0" style="font-size: 1rem;">Member since <%= @user.created_at.strftime("%B %Y") %></p>
      </div>

      <div class="mb-4">
        <p class="fw-bold fs-6 mb-1">Email address</p>
        <p class="text-muted mb-0 fs-6"><%= @user.email %></p>
      </div>

      <div class="mb-4">
        <p class="fw-bold fs-6 mb-1">Phone number</p>
        <p class="text-muted mb-0 fs-6"><%= @user.phone_number.presence || "(XXX) XXX-XXXX" %></p>
      </div>

      <div>
        <p class="fw-bold fs-6 mb-1">Pickup address</p>
        <p class="text-muted mb-0 fs-6"><%= @user.address.presence || "No address set" %></p>
      </div>
    </div>

  </div>
</div>
